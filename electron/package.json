{
  "name": "gemra",
  "version": "2.0.0",
  "description": "A modern terminal emulator built with Electron and xterm.js",
  "main": "dist-electron/main/index.js",
  "author": "Benjamin Marston",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "package:mac": "npm run build && electron-builder --mac",
    "package:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "package:mac:x64": "npm run build && electron-builder --mac --x64"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "@zed-industries/claude-code-acp": "^0.16.1",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.344.0",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^2.0.19",
    "remark-gfm": "^4.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/node": "^20.11.25",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.6"
  },
  "build": {
    "appId": "com.gemra.terminal",
    "productName": "Gemra",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.icns"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
